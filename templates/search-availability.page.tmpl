{{ template "base" .}}

{{ define "content" }}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="my-3">Search for Availability</h1>
            <form action="/search-availability" method="post" novalidate class="needs-validation">
                <input type="hidden" name="csrf_token" value="{{ .CSRFToken }}">
                <div class="row">
                    <div class="col">
                        <div id="date-range" class="row">
                            <div class="col">
                                <input type="text" name="start" class="form-control" placeholder="Arrival Date"
                                    autocomplete="off">
                            </div>
                            <div class="col">
                                <input type="text" name="end" class="form-control" placeholder="Departure Date"
                                    autocomplete="off">
                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <button type="submit" class="btn btn-primary">Search Availability</button>
            </form>
            <button class="btn btn-success my-3" id="submitDate">Test Notify</button>
        </div>
    </div>
</div>
{{ end }}

{{ define "js" }}
<script>
    const elem = document.getElementById("date-range");
    const rangepicker = new DateRangePicker(elem, {
        format: "yyyy-mm-dd",
    });
</script>
{{ end }}